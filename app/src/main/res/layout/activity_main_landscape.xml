<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/photo_area"
        android:background="#EFEFEF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/grid_helper" >

            <!-- Pet Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="84dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/name_label"
                android:id="@+id/name_label"/>
            <TextView
                android:id="@+id/pet_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal" />

            <!-- Pet Id Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/id_label" />
            <TextView
                android:id="@+id/pet_info_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="1"
                android:layout_column="1" />
        </GridLayout>

        <!-- Pet Image -->
        <ImageView
            android:id="@+id/pet_photo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/image_logo"
            android:src="@drawable/cat_chartreux_nuvoletta" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <!-- Buttons -->
        <Button
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="onClickFindPreviousPet"
            android:text="Previous" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Next"
            android:onClick="onClickFindNextPet" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/photo_area"
        android:layout_above="@id/buttons">


        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:columnCount="2"
            android:useDefaultMargins="false"
            tools:context="com.angie.mypet.MainActivity" >

            <!--
                Padding configuration can be found in dimens.xml.
                GridLayout has been chosen on purpose.
            -->



            <!-- Pet Name -->
            <!-- <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_row="1"
               android:layout_column="0"
               android:layout_marginBottom="10dp"
               android:text="@string/name_label" />
           <TextView
               android:id="@+id/pet_info_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="fill_horizontal"
               android:layout_row="1"
               android:layout_column="1" /> -->

            <!-- Pet Id Number -->
            <!--  <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_row="2"
                 android:layout_column="0"
                 android:layout_marginBottom="10dp"
                 android:text="@string/id_label" />
             <TextView
                 android:id="@+id/pet_info_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="fill_horizontal"
                 android:layout_row="2"
                 android:layout_column="1" /> -->


            <!-- Pet Type of Animal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:text="@string/animal_type_label" />
            <TextView
                android:id="@+id/pet_info_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3"
                android:layout_column="1" />

            <!-- Pet Breed -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/breed_label" />
            <TextView
                android:id="@+id/pet_info_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="4"
                android:layout_column="1" />

            <!-- Pet Sex -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/sex_label" />
            <TextView
                android:id="@+id/pet_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="5"
                android:layout_column="1" />

            <!-- Pet Date of Birth -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/birthdate_label" />
            <TextView
                android:id="@+id/pet_info_bdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="6"
                android:layout_column="1" />

            <!-- Pet Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/age_label" />
            <TextView
                android:id="@+id/pet_info_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="7"
                android:layout_column="1" />

            <!-- Pet Hair Colour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/hair_label" />
            <TextView
                android:id="@+id/pet_info_hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="8"
                android:layout_column="1" />

            <!-- Pet Eye Colour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/eye_label" />
            <TextView
                android:id="@+id/pet_info_eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="9"
                android:layout_column="1" />

            <!-- Pet Height -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/height_label" />
            <TextView
                android:id="@+id/pet_info_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="10"
                android:layout_column="1" />

            <!-- Pet Weight -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="11"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="@string/weight_label" />
            <TextView
                android:id="@+id/pet_info_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_row="11"
                android:layout_column="1" />

            <!-- Empty Space or Comments -->
            <TextView
                android:id="@+id/pet_info_comments"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnSpan="2"
                android:layout_row="12"
                android:layout_column="0"
                android:layout_marginTop="10dp"  />


        </GridLayout>

    </ScrollView>

</RelativeLayout>